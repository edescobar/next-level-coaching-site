---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import WhatIs from '../components/WhatIs.astro';
import Services from '../components/Services.astro';
import EmpoweringLeaders from '../components/EmpoweringLeaders.astro';
import Teams from '../components/Teams.astro';
import Career from '../components/Career.astro';
import Future from '../components/Future.astro';
import About from '../components/About.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';

const lang = 'en';

// Homepage-specific structured data for better SEO
const homepageStructuredData = {
  '@context': 'https://schema.org',
  '@type': 'CoachingService',
  name: 'NextLevel Executive Coaching Services',
  provider: {
    '@type': 'Person',
    name: 'Ana Perez-Mena',
    jobTitle: 'Certified Executive Coach',
    worksFor: {
      '@type': 'Organization',
      name: 'NextLevel Coaching'
    }
  },
  offers: [
    {
      '@type': 'Offer',
      name: 'Executive Coaching',
      description: 'Transform your leadership style and achieve breakthrough results with personalized executive coaching'
    },
    {
      '@type': 'Offer',
      name: 'Team Transformation',
      description: 'Build high-performing teams through strategic coaching and development programs'
    },
    {
      '@type': 'Offer',
      name: 'Personal Brand Building',
      description: 'Develop and strengthen your professional brand for career advancement'
    }
  ],
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: '5',
    reviewCount: '47',
    bestRating: '5'
  }
};
---

<Layout
  title="Executive Coaching & Leadership Development | NextLevel Coaching by Ana Perez-Mena"
  description="Transform your leadership with executive coaching from Ana Perez-Mena. 20+ years experience at Molson Coors. Certified professional coaching for executives, teams, and career transformation. Start your 90-day journey today."
  keywords="executive coaching services, leadership development programs, professional business coach, career transformation coaching, team building coaching, executive mentor, leadership coach certification, Ana Perez-Mena coach, NextLevel Coaching, corporate coaching services"
  lang={lang}
  structuredData={homepageStructuredData}
>
  <Navigation lang={lang} />
  <main class="pt-20">
    <Hero lang={lang} />
    <WhatIs lang={lang} />
    <Services lang={lang} />
    <EmpoweringLeaders lang={lang} />
    <Teams lang={lang} />
    <Career lang={lang} />
    <Future lang={lang} />
    <About lang={lang} />
    <Contact lang={lang} />
  </main>
  <Footer lang={lang} />
</Layout>

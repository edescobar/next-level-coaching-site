---
import { getTranslations } from '../i18n/translations';

export interface Props {
  lang: 'en' | 'es';
}

const { lang } = Astro.props;
const t = getTranslations(lang);
const BASE_URL = import.meta.env.BASE_URL;---

<section id="about" class="py-24 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-6xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Photo/Image Placeholder -->
        <div class="order-2 lg:order-1">
          <div class="relative">
            <div class="bg-gradient-to-br from-blue-100 to-teal-50 rounded-2xl p-8 shadow-xl">
              <div class="aspect-[3/4] bg-white rounded-lg shadow-inner overflow-hidden">
                <img
                  src={`${import.meta.env.BASE_URL}images/ana-perez-mena.png`}
                  alt="Ana Perez-Mena - Executive Coach"
                  class="w-full h-full object-cover"
                />
              </div>
              <!-- Certifications badges -->
              <div class="mt-6 flex flex-wrap gap-3 justify-center">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  Certified Psychologist
                </span>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-teal-100 text-teal-800">
                  Train-the-Trainer
                </span>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
                  ICF Certification (In Progress)
                </span>
              </div>
            </div>
          </div>
        </div>

        <!-- Content -->
        <div class="order-1 lg:order-2">
          <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-6">
            {t.about.title}
          </h2>

          <p class="text-lg text-slate-700 leading-relaxed mb-6">
            {t.about.description1}
          </p>

          <p class="text-lg text-slate-700 leading-relaxed mb-6">
            {t.about.experience}
          </p>

          <div class="mb-6">
            <p class="text-lg text-slate-700 font-semibold mb-4">
              {t.about.background}
            </p>
            <ul class="space-y-3">
              <li class="flex items-start">
                <svg class="w-5 h-5 text-blue-600 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">{t.about.credentials.psychologist}</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-blue-600 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">{t.about.credentials.trainer}</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-blue-600 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">{t.about.credentials.coaching}</span>
              </li>
            </ul>
          </div>

          <p class="text-lg text-slate-700 leading-relaxed mb-6">
            {t.about.specialization}
          </p>

          <p class="text-lg text-slate-700 leading-relaxed mb-8 font-medium">
            {t.about.closing}
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-wrap gap-4">
            <a
              href={`${lang === 'es' ? `${BASE_URL}es/` : BASE_URL}#contact`}
              class="inline-flex items-center px-8 py-4 bg-blue-900 text-white font-semibold rounded-lg hover:bg-blue-800 transition-colors duration-200 shadow-lg hover:shadow-xl"
            >
              {t.nav.getStarted}
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </a>
            <a
              href="https://www.linkedin.com/in/ana-cristina-perez-mena/"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-8 py-4 bg-white text-blue-900 font-semibold rounded-lg border-2 border-blue-900 hover:bg-blue-50 transition-colors duration-200"
            >
              {lang === 'en' ? 'Connect on LinkedIn' : 'Conectar en LinkedIn'}
              <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
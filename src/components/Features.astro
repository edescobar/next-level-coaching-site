---
import { getTranslations } from '../i18n/translations';

export interface Props {
  lang: 'en' | 'es';
}

const { lang } = Astro.props;
const t = getTranslations(lang);

const features = [
  {
    icon: 'user',
    title: t.features.feature1.title,
    description: t.features.feature1.description,
    color: 'indigo'
  },
  {
    icon: 'chart',
    title: t.features.feature2.title,
    description: t.features.feature2.description,
    color: 'purple'
  },
  {
    icon: 'star',
    title: t.features.feature3.title,
    description: t.features.feature3.description,
    color: 'pink'
  },
  {
    icon: 'support',
    title: t.features.feature4.title,
    description: t.features.feature4.description,
    color: 'blue'
  }
];
---

<section id="services" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        {t.features.title}
      </h2>
      <p class="text-lg text-gray-600">
        {t.features.subtitle}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {features.map((feature) => (
        <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 group">
          <div class={`w-14 h-14 rounded-xl bg-${feature.color}-100 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300`}>
            {feature.icon === 'user' && (
              <svg class={`w-7 h-7 text-${feature.color}-600`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            )}
            {feature.icon === 'chart' && (
              <svg class={`w-7 h-7 text-${feature.color}-600`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            )}
            {feature.icon === 'star' && (
              <svg class={`w-7 h-7 text-${feature.color}-600`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
              </svg>
            )}
            {feature.icon === 'support' && (
              <svg class={`w-7 h-7 text-${feature.color}-600`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            )}
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">
            {feature.title}
          </h3>
          <p class="text-gray-600 leading-relaxed">
            {feature.description}
          </p>
        </div>
      ))}
    </div>

    <!-- Process Section -->
    <div class="mt-20 bg-gradient-to-r from-indigo-600 to-purple-600 rounded-3xl p-12 text-white">
      <div class="max-w-4xl mx-auto">
        <h3 class="text-2xl sm:text-3xl font-bold mb-8 text-center">Our Proven Process</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold">1</span>
            </div>
            <h4 class="text-xl font-semibold mb-2">Discover</h4>
            <p class="text-white/90">We analyze your current situation and identify opportunities</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold">2</span>
            </div>
            <h4 class="text-xl font-semibold mb-2">Design</h4>
            <p class="text-white/90">Create a personalized roadmap tailored to your goals</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold">3</span>
            </div>
            <h4 class="text-xl font-semibold mb-2">Deliver</h4>
            <p class="text-white/90">Execute the plan with ongoing support and adjustments</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
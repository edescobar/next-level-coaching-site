---
import { getTranslations } from '../i18n/translations';

export interface Props {
  lang: 'en' | 'es';
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<section id="approach" class="py-24 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
        {t.empowerLeaders.title}
      </h2>

      <p class="text-xl text-slate-600 mb-8 max-w-3xl">
        {t.empowerLeaders.subtitle}
      </p>

      <p class="text-lg text-slate-700 leading-relaxed mb-10 max-w-3xl">
        {t.empowerLeaders.description}
      </p>

      <div class="bg-gradient-to-r from-blue-50 to-teal-50 rounded-2xl p-10 mb-10">
        <h3 class="text-xl font-bold text-slate-900 mb-6">
          {t.empowerLeaders.approach}
        </h3>

        <div class="grid md:grid-cols-2 gap-6">
          <div class="flex items-start">
            <div class="flex-shrink-0 w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center mt-1">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
              </svg>
            </div>
            <p class="ml-4 text-slate-700">
              <span class="font-semibold">{t.empowerLeaders.points.proactive}</span>
            </p>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 w-10 h-10 rounded-full bg-teal-100 flex items-center justify-center mt-1">
              <svg class="w-5 h-5 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <p class="ml-4 text-slate-700">
              <span class="font-semibold">{t.empowerLeaders.points.vision}</span>
            </p>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 w-10 h-10 rounded-full bg-amber-100 flex items-center justify-center mt-1">
              <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <p class="ml-4 text-slate-700">
              <span class="font-semibold">{t.empowerLeaders.points.presence}</span>
            </p>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center mt-1">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <p class="ml-4 text-slate-700">
              <span class="font-semibold">{t.empowerLeaders.points.authentic}</span>
            </p>
          </div>
        </div>
      </div>

      <p class="text-lg text-slate-700 leading-relaxed italic">
        {t.empowerLeaders.footer}
      </p>
    </div>
  </div>
</section>
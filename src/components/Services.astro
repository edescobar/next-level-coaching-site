---
import { getTranslations } from '../i18n/translations';

export interface Props {
  lang: 'en' | 'es';
}

const { lang } = Astro.props;
const t = getTranslations(lang);
const BASE_URL = import.meta.env.BASE_URL;---

<section id="services" class="py-24 bg-slate-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-slate-900 mb-4">
        {t.services.title}
      </h2>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 mt-8 sm:mt-12">
        <!-- Executive Coaching -->
        <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden">
          <div class="bg-gradient-to-br from-blue-900 to-blue-700 p-6">
            <svg class="w-12 h-12 text-white mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A8.986 8.986 0 0112 21a8.986 8.986 0 01-9-7.745M21 13.255V19h-5.745M3 13.255V19h5.745M12 3v1m0 0a3 3 0 013 3v1H9V7a3 3 0 013-3z"></path>
            </svg>
            <h3 class="text-xl sm:text-2xl font-bold text-white drop-shadow-lg">
              {t.services.executive.title}
            </h3>
          </div>
          <div class="p-5 sm:p-6">
            <p class="text-sm sm:text-base text-slate-600 leading-relaxed">
              {t.services.executive.description}
            </p>
            <a href={`${lang === 'es' ? `${BASE_URL}es/` : BASE_URL}#contact`} class="inline-flex items-center mt-4 sm:mt-6 text-sm sm:text-base text-blue-900 font-semibold hover:text-blue-700">
              {lang === 'en' ? 'Learn More' : 'Saber Más'}
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Employee Branding -->
        <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden">
          <div class="bg-gradient-to-br from-teal-700 to-teal-600 p-6">
            <svg class="w-12 h-12 text-white mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <h3 class="text-xl sm:text-2xl font-bold text-white drop-shadow-lg">
              {t.services.branding.title}
            </h3>
          </div>
          <div class="p-5 sm:p-6">
            <p class="text-sm sm:text-base text-slate-600 leading-relaxed">
              {t.services.branding.description}
            </p>
            <a href={`${lang === 'es' ? `${BASE_URL}es/` : BASE_URL}#contact`} class="inline-flex items-center mt-4 sm:mt-6 text-sm sm:text-base text-teal-700 font-semibold hover:text-teal-600">
              {lang === 'en' ? 'Learn More' : 'Saber Más'}
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Leadership Development -->
        <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden">
          <div class="bg-gradient-to-br from-amber-700 to-amber-600 p-6">
            <svg class="w-12 h-12 text-white mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
            <h3 class="text-xl sm:text-2xl font-bold text-white drop-shadow-lg">
              {t.services.leadership.title}
            </h3>
          </div>
          <div class="p-5 sm:p-6">
            <p class="text-sm sm:text-base text-slate-600 leading-relaxed">
              {t.services.leadership.description}
            </p>
            <a href={`${lang === 'es' ? `${BASE_URL}es/` : BASE_URL}#contact`} class="inline-flex items-center mt-4 sm:mt-6 text-sm sm:text-base text-amber-700 font-semibold hover:text-amber-600">
              {lang === 'en' ? 'Learn More' : 'Saber Más'}
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
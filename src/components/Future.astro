---
import { getTranslations } from '../i18n/translations';

export interface Props {
  lang: 'en' | 'es';
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<section class="py-24 bg-gradient-to-br from-blue-50 via-white to-teal-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
        {t.future.title}
      </h2>

      <p class="text-xl text-slate-600 mb-10 max-w-3xl font-medium">
        {t.future.subtitle}
      </p>

      <p class="text-lg text-slate-700 leading-relaxed mb-12 max-w-3xl">
        {t.future.description}
      </p>

      <div class="bg-white rounded-3xl shadow-xl p-12 mb-12">
        <h3 class="text-xl font-bold text-slate-900 mb-10">
          {t.future.approach}
        </h3>

        <div class="space-y-8">
          <div class="flex items-center bg-gradient-to-r from-blue-50 to-transparent rounded-xl p-6">
            <div class="flex-shrink-0 w-16 h-16 rounded-full bg-blue-500 text-white flex items-center justify-center text-2xl font-bold">
              1
            </div>
            <div class="ml-6">
              <p class="text-lg text-slate-800 font-semibold">
                {t.future.points.discover}
              </p>
            </div>
          </div>

          <div class="flex items-center bg-gradient-to-r from-teal-50 to-transparent rounded-xl p-6">
            <div class="flex-shrink-0 w-16 h-16 rounded-full bg-teal-500 text-white flex items-center justify-center text-2xl font-bold">
              2
            </div>
            <div class="ml-6">
              <p class="text-lg text-slate-800 font-semibold">
                {t.future.points.navigate}
              </p>
            </div>
          </div>

          <div class="flex items-center bg-gradient-to-r from-amber-50 to-transparent rounded-xl p-6">
            <div class="flex-shrink-0 w-16 h-16 rounded-full bg-amber-500 text-white flex items-center justify-center text-2xl font-bold">
              3
            </div>
            <div class="ml-6">
              <p class="text-lg text-slate-800 font-semibold">
                {t.future.points.build}
              </p>
            </div>
          </div>
        </div>

        <p class="text-lg text-slate-700 leading-relaxed mt-10">
          {t.future.support}
        </p>
      </div>

      <div class="mt-12">
        <p class="text-2xl font-bold text-blue-900 mb-8">
          {t.future.cta}
        </p>
        <a
          href={`${lang === 'es' ? '/es' : ''}#contact`}
          class="inline-flex items-center px-8 py-4 bg-blue-900 text-white font-semibold rounded-lg hover:bg-blue-800 transition-colors duration-200 shadow-lg hover:shadow-xl"
        >
          {t.nav.getStarted}
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
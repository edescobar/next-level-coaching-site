---
import { getTranslations } from '../i18n/translations';

export interface Props {
  lang: 'en' | 'es';
}

const { lang } = Astro.props;
const t = getTranslations(lang);

const testimonials = [
  {
    quote: t.testimonials.testimonial1.quote,
    author: t.testimonials.testimonial1.author,
    role: t.testimonials.testimonial1.role,
    rating: 5
  },
  {
    quote: t.testimonials.testimonial2.quote,
    author: t.testimonials.testimonial2.author,
    role: t.testimonials.testimonial2.role,
    rating: 5
  },
  {
    quote: t.testimonials.testimonial3.quote,
    author: t.testimonials.testimonial3.author,
    role: t.testimonials.testimonial3.role,
    rating: 5
  }
];
---

<section id="testimonials" class="py-20 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        {t.testimonials.title}
      </h2>
      <p class="text-lg text-gray-600">
        {t.testimonials.subtitle}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {testimonials.map((testimonial, index) => (
        <div class="bg-gray-50 rounded-2xl p-8 relative hover:shadow-lg transition-shadow duration-300">
          <!-- Quote Icon -->
          <svg class="w-8 h-8 text-indigo-200 mb-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
          </svg>

          <!-- Rating Stars -->
          <div class="flex mb-4">
            {[...Array(5)].map(() => (
              <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <!-- Quote -->
          <p class="text-gray-700 mb-6 leading-relaxed italic">
            "{testimonial.quote}"
          </p>

          <!-- Author -->
          <div class="flex items-center">
            <div class="w-12 h-12 bg-gradient-to-br from-indigo-400 to-purple-400 rounded-full mr-4"></div>
            <div>
              <p class="font-semibold text-gray-900">{testimonial.author}</p>
              <p class="text-sm text-gray-600">{testimonial.role}</p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Stats Section -->
    <div class="mt-20 grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto">
      <div class="text-center">
        <p class="text-4xl font-bold text-indigo-600">1000+</p>
        <p class="text-gray-600 mt-2">Happy Clients</p>
      </div>
      <div class="text-center">
        <p class="text-4xl font-bold text-purple-600">95%</p>
        <p class="text-gray-600 mt-2">Success Rate</p>
      </div>
      <div class="text-center">
        <p class="text-4xl font-bold text-pink-600">50+</p>
        <p class="text-gray-600 mt-2">Expert Coaches</p>
      </div>
      <div class="text-center">
        <p class="text-4xl font-bold text-blue-600">24/7</p>
        <p class="text-gray-600 mt-2">Support</p>
      </div>
    </div>
  </div>
</section>
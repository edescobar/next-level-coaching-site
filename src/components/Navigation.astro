---
import { getTranslations } from '../i18n/translations';

export interface Props {
  lang: 'en' | 'es';
}

const { lang } = Astro.props;
const t = getTranslations(lang);
const currentPath = Astro.url.pathname;
const BASE_URL = import.meta.env.BASE_URL;

const otherLang = lang === 'en' ? 'es' : 'en';
const otherLangPath = lang === 'en'
  ? `${BASE_URL}es/`
  : BASE_URL;
---

<header class="fixed top-0 w-full bg-white/95 backdrop-blur-sm shadow-sm z-50 border-b border-slate-200">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href={lang === 'es' ? `${BASE_URL}es/` : BASE_URL} class="flex items-center space-x-3">
        <!-- NextLevel Logo SVG -->
        <div class="flex items-center">
          <svg class="h-10 w-auto" viewBox="0 0 200 50" fill="none" xmlns="http://www.w3.org/2000/svg">
            <!-- Bar chart logo -->
            <rect x="5" y="30" width="8" height="15" fill="#d97706" />
            <rect x="15" y="20" width="8" height="25" fill="#0f766e" />
            <rect x="25" y="10" width="8" height="35" fill="#3b82f6" />
            <rect x="35" y="5" width="8" height="40" fill="#1e3a8a" />

            <!-- Text -->
            <text x="50" y="28" font-family="Montserrat, sans-serif" font-size="18" font-weight="700" fill="#1e3a8a">
              NEXTLEVEL
            </text>
            <text x="50" y="42" font-family="Roboto, sans-serif" font-size="14" font-weight="400" fill="#64748b">
              COACHING
            </text>
          </svg>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-8">
        <a href={lang === 'es' ? `${BASE_URL}es/` : BASE_URL} class="text-slate-700 hover:text-blue-900 font-medium transition-colors">
          {t.nav.home}
        </a>
        <a href={`${lang === 'es' ? `${BASE_URL}es/` : BASE_URL}#services`} class="text-slate-700 hover:text-blue-900 font-medium transition-colors">
          {t.nav.services}
        </a>
        <a href={`${lang === 'es' ? `${BASE_URL}es/` : BASE_URL}#approach`} class="text-slate-700 hover:text-blue-900 font-medium transition-colors">
          {t.nav.approach}
        </a>
        <a href={`${lang === 'es' ? `${BASE_URL}es/` : BASE_URL}#about`} class="text-slate-700 hover:text-blue-900 font-medium transition-colors">
          {t.nav.about}
        </a>
        <a href={`${lang === 'es' ? `${BASE_URL}es/` : BASE_URL}#contact`} class="text-slate-700 hover:text-blue-900 font-medium transition-colors">
          {t.nav.contact}
        </a>
      </div>

      <!-- CTA and Language Switcher -->
      <div class="flex items-center space-x-4">
        <!-- Language Switcher -->
        <a
          href={otherLangPath}
          class="flex items-center space-x-1 text-slate-600 hover:text-blue-900 transition-colors"
          aria-label="Switch language"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
          </svg>
          <span class="font-medium">{otherLang.toUpperCase()}</span>
        </a>

        <!-- CTA Button -->
        <a
          href={`${lang === 'es' ? `${BASE_URL}es/` : BASE_URL}#contact`}
          class="hidden sm:inline-flex items-center px-6 py-3 bg-blue-900 text-white font-semibold rounded-lg hover:bg-blue-800 transition-colors duration-200 shadow-md hover:shadow-lg"
        >
          {t.nav.getStarted}
        </a>

        <!-- Mobile Menu Button -->
        <button id="mobile-menu-btn" class="lg:hidden p-2" aria-label="Toggle menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden lg:hidden absolute top-full left-0 right-0 bg-white shadow-lg border-t border-slate-200">
      <div class="px-4 py-4 space-y-3">
        <a href={lang === 'es' ? `${BASE_URL}es/` : BASE_URL} class="block text-slate-700 hover:text-blue-900 font-medium py-2">
          {t.nav.home}
        </a>
        <a href={`${lang === 'es' ? `${BASE_URL}es/` : BASE_URL}#services`} class="block text-slate-700 hover:text-blue-900 font-medium py-2">
          {t.nav.services}
        </a>
        <a href={`${lang === 'es' ? `${BASE_URL}es/` : BASE_URL}#approach`} class="block text-slate-700 hover:text-blue-900 font-medium py-2">
          {t.nav.approach}
        </a>
        <a href={`${lang === 'es' ? `${BASE_URL}es/` : BASE_URL}#about`} class="block text-slate-700 hover:text-blue-900 font-medium py-2">
          {t.nav.about}
        </a>
        <a href={`${lang === 'es' ? `${BASE_URL}es/` : BASE_URL}#contact`} class="block text-slate-700 hover:text-blue-900 font-medium py-2">
          {t.nav.contact}
        </a>
        <a
          href={`${lang === 'es' ? `${BASE_URL}es/` : BASE_URL}#contact`}
          class="block w-full text-center px-6 py-3 bg-blue-900 text-white font-semibold rounded-lg mt-4"
        >
          {t.nav.getStarted}
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
---
import { getTranslations } from '../i18n/translations';

export interface Props {
  lang: 'en' | 'es';
}

const { lang } = Astro.props;
const t = getTranslations(lang);
const BASE_URL = import.meta.env.BASE_URL;---

<section class="relative min-h-[100vh] flex items-center bg-gradient-to-b from-slate-50 to-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Content -->
        <div>
          <!-- Professional Badge -->
          <div class="inline-flex items-center px-4 py-2 bg-blue-50 border border-blue-200 rounded-full text-blue-900 text-sm font-semibold mb-6">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            ICF Certification in Progress â€¢ 20+ Years Experience
          </div>

          <!-- Main Heading -->
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-900 mb-6 leading-tight">
            {t.hero.title}
          </h1>

          <!-- Subtitle -->
          <p class="text-lg sm:text-xl text-slate-600 mb-8 leading-relaxed">
            {t.hero.subtitle}
          </p>

          <!-- Tagline -->
          <p class="text-md font-medium text-blue-900 italic mb-8 border-l-4 border-blue-500 pl-4">
            "{t.hero.tagline}"
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
            <a
              href={`${lang === 'es' ? `${BASE_URL}es/` : BASE_URL}#contact`}
              class="inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-blue-900 text-white text-sm sm:text-base font-semibold rounded-lg hover:bg-blue-800 transition-colors duration-200 shadow-lg hover:shadow-xl"
            >
              {t.hero.cta}
              <svg class="w-4 h-4 sm:w-5 sm:h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </a>
            <a
              href={`${lang === 'es' ? `${BASE_URL}es/` : BASE_URL}#approach`}
              class="inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 bg-white text-blue-900 text-sm sm:text-base font-semibold rounded-lg border-2 border-blue-900 hover:bg-blue-50 transition-colors duration-200"
            >
              {t.hero.secondaryCta}
            </a>
          </div>

          <!-- Trust Indicators -->
          <div class="mt-12 pt-8 border-t border-slate-200">
            <div class="flex flex-wrap items-center gap-8">
              <div class="flex items-center">
                <svg class="w-6 h-6 text-teal-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
                </svg>
                <span class="text-slate-700 font-medium">Executive Coaching</span>
              </div>
              <div class="flex items-center">
                <svg class="w-6 h-6 text-teal-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"/>
                </svg>
                <span class="text-slate-700 font-medium">Team Development</span>
              </div>
              <div class="flex items-center">
                <svg class="w-6 h-6 text-teal-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 0l-2 2a1 1 0 101.414 1.414L8 10.414l1.293 1.293a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700 font-medium">Career Advancement</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Professional Image Placeholder -->
        <div class="relative hidden lg:block">
          <div class="relative">
            <!-- Background Decoration -->
            <div class="absolute inset-0 bg-gradient-to-br from-blue-200 via-teal-100 to-amber-100 rounded-3xl transform rotate-3 opacity-50"></div>
            <div class="absolute inset-0 bg-gradient-to-tr from-teal-200 via-blue-100 to-purple-100 rounded-3xl transform -rotate-3 opacity-50"></div>

            <!-- Main Card -->
            <div class="relative bg-gradient-to-br from-white via-blue-50 to-teal-50 rounded-3xl p-8 shadow-2xl border border-white/50">
              <!-- Leadership Journey Visualization -->
              <div class="bg-white/90 backdrop-blur rounded-2xl p-8 shadow-lg">
                <div class="w-full">
                  <!-- Header with Animation -->
                  <div class="text-left mb-8">
                    <h3 class="text-2xl font-bold bg-gradient-to-r from-blue-900 to-teal-700 bg-clip-text text-transparent">
                      Your 90-Day Transformation
                    </h3>
                    <p class="text-sm text-slate-600 mt-2">Watch yourself evolve into the leader you're meant to be</p>
                  </div>

                  <!-- Journey Path with Enhanced Design -->
                  <div class="relative mb-10">
                    <div class="flex items-center justify-between">
                      <!-- Starting Point - Where You Are -->
                      <div class="relative z-10 text-left group">
                        <div class="relative">
                          <div class="absolute inset-0 bg-slate-300 rounded-full blur-xl opacity-40 group-hover:opacity-60 transition-opacity"></div>
                          <div class="relative w-24 h-24 rounded-full bg-gradient-to-br from-slate-100 to-slate-300 flex items-center justify-center mb-3 transform transition-all duration-700 hover:scale-110 border-4 border-white shadow-xl">
                            <svg class="w-12 h-12 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                          </div>
                        </div>
                        <div class="bg-white rounded-lg px-3 py-1 shadow-md">
                          <p class="text-xs font-bold text-slate-900">WHERE YOU ARE</p>
                          <p class="text-xs text-slate-500 mt-0.5">Capable but Stuck</p>
                        </div>
                      </div>

                      <!-- Animated Progress Path -->
                      <div class="absolute top-12 left-24 right-24 h-0.5 overflow-hidden">
                        <div class="h-full bg-gradient-to-r from-slate-300 via-blue-400 to-teal-500 rounded-full relative">
                          <div class="absolute inset-0 bg-gradient-to-r from-blue-400 to-teal-400 animate-pulse"></div>
                          <!-- Moving Dot Animation -->
                          <div class="absolute top-1/2 transform -translate-y-1/2 w-3 h-3 bg-white rounded-full border-2 border-blue-500 animate-slide-right shadow-lg"></div>
                        </div>
                      </div>

                      <!-- End Point - Where You'll Be -->
                      <div class="relative z-10 text-right group">
                        <div class="relative">
                          <div class="absolute inset-0 bg-teal-400 rounded-full blur-xl opacity-40 group-hover:opacity-60 transition-opacity animate-pulse"></div>
                          <div class="relative w-24 h-24 rounded-full bg-gradient-to-br from-teal-400 to-blue-600 flex items-center justify-center mb-3 transform transition-all duration-700 hover:scale-110 hover:rotate-12 border-4 border-white shadow-2xl">
                            <svg class="w-12 h-12 text-white drop-shadow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                            </svg>
                          </div>
                        </div>
                        <div class="bg-gradient-to-r from-teal-500 to-blue-600 text-white rounded-lg px-3 py-1 shadow-lg">
                          <p class="text-xs font-bold">WHERE YOU'LL BE</p>
                          <p class="text-xs mt-0.5">Confident & Inspiring</p>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Transformation Grid -->
                  <div class="grid grid-cols-3 gap-3 mb-6">
                    <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-3 transform transition-all hover:scale-105 hover:-rotate-1">
                      <div class="flex flex-col items-center">
                        <div class="w-10 h-10 bg-blue-500 rounded-lg flex items-center justify-center mb-2">
                          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                          </svg>
                        </div>
                        <p class="text-xs font-bold text-blue-900">Strategic</p>
                        <p class="text-xs text-blue-700">Thinking</p>
                      </div>
                    </div>

                    <div class="bg-gradient-to-br from-teal-50 to-teal-100 rounded-xl p-3 transform transition-all hover:scale-105">
                      <div class="flex flex-col items-center">
                        <div class="w-10 h-10 bg-teal-500 rounded-lg flex items-center justify-center mb-2">
                          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                          </svg>
                        </div>
                        <p class="text-xs font-bold text-teal-900">Team</p>
                        <p class="text-xs text-teal-700">Inspiration</p>
                      </div>
                    </div>

                    <div class="bg-gradient-to-br from-amber-50 to-amber-100 rounded-xl p-3 transform transition-all hover:scale-105 hover:rotate-1">
                      <div class="flex flex-col items-center">
                        <div class="w-10 h-10 bg-amber-500 rounded-lg flex items-center justify-center mb-2">
                          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                          </svg>
                        </div>
                        <p class="text-xs font-bold text-amber-900">Executive</p>
                        <p class="text-xs text-amber-700">Presence</p>
                      </div>
                    </div>
                  </div>

                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes slide-right {
    0% {
      left: 0;
    }
    100% {
      left: calc(100% - 12px);
    }
  }

  .animate-slide-right {
    animation: slide-right 3s ease-in-out infinite alternate;
  }
</style>
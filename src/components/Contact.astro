---
import { getTranslations } from '../i18n/translations';

export interface Props {
  lang: 'en' | 'es';
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<section id="contact" class="py-24 bg-gradient-to-b from-slate-50 to-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- CTA Section -->
    <div class="max-w-4xl mx-auto mb-16 text-center">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
        {t.cta.title}
      </h2>
      <p class="text-xl text-slate-600 mb-8">
        {t.cta.subtitle}
      </p>
    </div>

    <div class="max-w-6xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-white rounded-2xl shadow-xl p-8">
          <h3 class="text-2xl font-bold text-slate-900 mb-6">
            {t.contact.bookSession}
          </h3>
          <p class="text-slate-600 mb-8">
            {t.contact.scheduleText}
          </p>

          <form id="contact-form" class="space-y-6">
            <!-- Name Field -->
            <div>
              <label for="name" class="block text-sm font-semibold text-slate-700 mb-2">
                {t.contact.name}
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
              />
            </div>

            <!-- Email Field -->
            <div>
              <label for="email" class="block text-sm font-semibold text-slate-700 mb-2">
                {t.contact.email}
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
              />
            </div>

            <!-- Company Field -->
            <div>
              <label for="company" class="block text-sm font-semibold text-slate-700 mb-2">
                {t.contact.company}
              </label>
              <input
                type="text"
                id="company"
                name="company"
                class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
              />
            </div>

            <!-- Message Field -->
            <div>
              <label for="message" class="block text-sm font-semibold text-slate-700 mb-2">
                {t.contact.message}
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 resize-none"
              ></textarea>
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="w-full px-8 py-4 bg-blue-900 text-white font-semibold rounded-lg hover:bg-blue-800 transition-colors duration-200 shadow-lg hover:shadow-xl"
            >
              {t.contact.submit}
            </button>

            <!-- Success Message -->
            <div id="success-message" class="hidden bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg">
              <div class="flex items-center">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span>{t.contact.success}</span>
              </div>
            </div>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="lg:pl-8">
          <div class="mb-12">
            <h3 class="text-2xl font-bold text-slate-900 mb-6">
              {lang === 'en' ? 'Direct Contact' : 'Contacto Directo'}
            </h3>

            <!-- Email -->
            <div class="mb-6">
              <div class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <div>
                  <p class="font-semibold text-slate-900 mb-1">{lang === 'en' ? 'Email' : 'Correo'}</p>
                  <a href="mailto:any.perezmena9@gmail.com" class="text-blue-600 hover:text-blue-700">
                    any.perezmena9@gmail.com
                  </a>
                </div>
              </div>
            </div>

            <!-- Phone -->
            <div class="mb-6">
              <div class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <div>
                  <p class="font-semibold text-slate-900 mb-1">{lang === 'en' ? 'Phone' : 'Teléfono'}</p>
                  <a href="tel:+18327575103" class="text-blue-600 hover:text-blue-700">
                    +1 (832) 757-5103
                  </a>
                </div>
              </div>
            </div>

            <!-- Location -->
            <div class="mb-6">
              <div class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <div>
                  <p class="font-semibold text-slate-900 mb-1">{lang === 'en' ? 'Service Areas' : 'Áreas de Servicio'}</p>
                  <p class="text-slate-600">{lang === 'en' ? 'United States & Latin America' : 'Estados Unidos y América Latina'}</p>
                  <p class="text-slate-600 text-sm mt-1">{lang === 'en' ? 'Virtual & In-Person Sessions Available' : 'Sesiones Virtuales y Presenciales Disponibles'}</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Professional Badges -->
          <div class="bg-slate-50 rounded-xl p-6">
            <h4 class="font-semibold text-slate-900 mb-4">{lang === 'en' ? 'Certifications & Expertise' : 'Certificaciones y Experiencia'}</h4>
            <div class="space-y-3">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-teal-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">{lang === 'en' ? '20+ Years Corporate Experience' : '20+ Años de Experiencia Corporativa'}</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-teal-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">{lang === 'en' ? 'Certified Psychologist' : 'Psicóloga Certificada'}</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-teal-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">{lang === 'en' ? 'ICF Certification in Progress' : 'Certificación ICF en Progreso'}</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-teal-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">{lang === 'en' ? 'Train-the-Trainer Facilitator' : 'Facilitadora Train-the-Trainer'}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const successMessage = document.getElementById('success-message');

  form?.addEventListener('submit', (e) => {
    e.preventDefault();

    // Show success message
    successMessage?.classList.remove('hidden');

    // Reset form
    form.reset();

    // Hide success message after 5 seconds
    setTimeout(() => {
      successMessage?.classList.add('hidden');
    }, 5000);

    // In a real application, you would send the form data to a server here
    console.log('Form submitted');
  });
</script>
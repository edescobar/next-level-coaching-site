---
import { getTranslations } from '../i18n/translations';

export interface Props {
  lang: 'en' | 'es';
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<section id="contact" class="py-24 bg-gradient-to-b from-slate-50 to-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- CTA Section -->
    <div class="max-w-4xl mx-auto mb-12 sm:mb-16 text-center">
      <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-slate-900 mb-4 sm:mb-6">
        {t.cta.title}
      </h2>
      <p class="text-base sm:text-lg md:text-xl text-slate-600 mb-6 sm:mb-8">
        {t.cta.subtitle}
      </p>
    </div>

    <div class="max-w-6xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12">
        <!-- Booking Widget -->
        <div class="bg-white rounded-2xl shadow-xl p-6 sm:p-8">
          <h3 class="text-xl sm:text-2xl font-bold text-slate-900 mb-4 sm:mb-6">
            {t.contact.bookSession}
          </h3>
          <p class="text-sm sm:text-base text-slate-600 mb-6 sm:mb-8">
            {t.contact.scheduleText}
          </p>

          <!-- Zcal Booking Widget -->
          <div class="zcal-inline-widget" style="min-height: 300px;">
            <a href="https://zcal.co/i/37LAziB7" class="inline-flex items-center justify-center w-full sm:w-auto px-6 sm:px-8 py-3 sm:py-4 bg-blue-900 text-white text-sm sm:text-base font-semibold rounded-lg hover:bg-blue-800 transition-colors duration-200 shadow-lg hover:shadow-xl text-center">
              {lang === 'en' ? 'Schedule Your 30 Minute Discovery Call' : 'Agenda Tu Llamada de Descubrimiento de 30 Minutos'}
            </a>
          </div>

          <!-- Additional Information -->
          <div class="mt-6 sm:mt-8 p-3 sm:p-4 bg-blue-50 rounded-lg border border-blue-200">
            <div class="flex items-start">
              <svg class="w-5 h-5 sm:w-6 sm:h-6 text-blue-600 mr-2 sm:mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <div class="flex-1">
                <p class="text-xs sm:text-sm font-semibold text-blue-900">
                  {lang === 'en' ? 'What to Expect:' : 'Qué Esperar:'}
                </p>
                <ul class="mt-1 sm:mt-2 space-y-0.5 sm:space-y-1 text-xs sm:text-sm text-slate-700">
                  <li>• {lang === 'en' ? '30-minute complimentary consultation' : 'Consulta gratuita de 30 minutos'}</li>
                  <li>• {lang === 'en' ? 'Discuss your goals and challenges' : 'Discute tus objetivos y desafíos'}</li>
                  <li>• {lang === 'en' ? 'Learn about our coaching approach' : 'Conoce nuestro enfoque de coaching'}</li>
                  <li>• {lang === 'en' ? 'Get personalized recommendations' : 'Recibe recomendaciones personalizadas'}</li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Information -->
        <div class="mt-8 lg:mt-0 lg:pl-8">
          <div class="mb-8 sm:mb-12">
            <h3 class="text-xl sm:text-2xl font-bold text-slate-900 mb-4 sm:mb-6">
              {lang === 'en' ? 'Direct Contact' : 'Contacto Directo'}
            </h3>

            <!-- Email -->
            <div class="mb-6">
              <div class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <div>
                  <p class="font-semibold text-slate-900 mb-1">{lang === 'en' ? 'Email' : 'Correo'}</p>
                  <a href="mailto:any.perezmena9@gmail.com" class="text-blue-600 hover:text-blue-700">
                    any.perezmena9@gmail.com
                  </a>
                </div>
              </div>
            </div>

            <!-- Phone -->
            <div class="mb-6">
              <div class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                <div>
                  <p class="font-semibold text-slate-900 mb-1">{lang === 'en' ? 'Phone' : 'Teléfono'}</p>
                  <a href="tel:+18327575103" class="text-blue-600 hover:text-blue-700">
                    +1 (832) 757-5103
                  </a>
                </div>
              </div>
            </div>

            <!-- Location -->
            <div class="mb-6">
              <div class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <div>
                  <p class="font-semibold text-slate-900 mb-1">{lang === 'en' ? 'Service Areas' : 'Áreas de Servicio'}</p>
                  <p class="text-slate-600">{lang === 'en' ? 'United States & Latin America' : 'Estados Unidos y América Latina'}</p>
                  <p class="text-slate-600 text-sm mt-1">{lang === 'en' ? 'Virtual & In-Person Sessions Available' : 'Sesiones Virtuales y Presenciales Disponibles'}</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Professional Badges -->
          <div class="bg-slate-50 rounded-xl p-6">
            <h4 class="font-semibold text-slate-900 mb-4">{lang === 'en' ? 'Certifications & Expertise' : 'Certificaciones y Experiencia'}</h4>
            <div class="space-y-3">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-teal-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">{lang === 'en' ? '20+ Years Corporate Experience' : '20+ Años de Experiencia Corporativa'}</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-teal-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">{lang === 'en' ? 'Certified Psychologist' : 'Psicóloga Certificada'}</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-teal-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">{lang === 'en' ? 'ICF Certification in Progress' : 'Certificación ICF en Progreso'}</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-teal-600 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-slate-700">{lang === 'en' ? 'Train-the-Trainer Facilitator' : 'Facilitadora Train-the-Trainer'}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Zcal Embed Script -->
<script type="text/javascript" async src="https://static.zcal.co/embed/v1/embed.js"></script>
---
import { getTranslations } from '../i18n/translations';

export interface Props {
  lang: 'en' | 'es';
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<section class="py-24 bg-slate-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
        {t.teams.title}
      </h2>

      <p class="text-xl text-slate-600 mb-10 max-w-3xl font-medium">
        {t.teams.subtitle}
      </p>

      <p class="text-lg text-slate-700 leading-relaxed mb-10 max-w-3xl">
        {t.teams.description}
      </p>

      <div class="bg-white rounded-2xl shadow-lg p-10 mb-10">
        <p class="text-lg font-semibold text-slate-900 mb-8">
          {t.teams.focus}
        </p>

        <div class="space-y-6">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-lg bg-blue-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <p class="text-lg text-slate-700">
                <span class="font-bold text-slate-900">{t.teams.communication.split('–')[0]}</span>
                <span class="text-slate-600">{' – ' + t.teams.communication.split('–')[1]}</span>
              </p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-lg bg-teal-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <p class="text-lg text-slate-700">
                <span class="font-bold text-slate-900">{t.teams.collaboration.split('–')[0]}</span>
                <span class="text-slate-600">{' – ' + t.teams.collaboration.split('–')[1]}</span>
              </p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 rounded-lg bg-amber-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <p class="text-lg text-slate-700">
                <span class="font-bold text-slate-900">{t.teams.trust.split('–')[0]}</span>
                <span class="text-slate-600">{' – ' + t.teams.trust.split('–')[1]}</span>
              </p>
            </div>
          </div>
        </div>
      </div>

      <p class="text-lg text-slate-700 mb-10">
        {t.teams.goal}
      </p>

      <div>
        <p class="text-2xl font-bold text-blue-900 mb-8">
          {t.teams.cta}
        </p>
        <a
          href={`${lang === 'es' ? '/es' : ''}#contact`}
          class="inline-flex items-center px-8 py-4 bg-blue-900 text-white font-semibold rounded-lg hover:bg-blue-800 transition-colors duration-200 shadow-lg hover:shadow-xl"
        >
          {lang === 'en' ? 'Schedule Team Assessment' : 'Agenda Evaluación de Equipo'}
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
---
import { getTranslations } from '../i18n/translations';

export interface Props {
  lang: 'en' | 'es';
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<section class="py-24 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
        {t.career.title}
      </h2>

      <p class="text-xl text-slate-600 mb-10 max-w-4xl">
        {t.career.subtitle}
      </p>

      <p class="text-lg text-slate-700 leading-relaxed mb-12 max-w-3xl">
        {t.career.description}
      </p>

      <div class="bg-gradient-to-br from-slate-50 to-blue-50 rounded-2xl p-10 mb-12">
        <h3 class="text-xl font-bold text-slate-900 mb-8">
          {t.career.approach}
        </h3>

        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow">
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 rounded-full bg-blue-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-slate-700">
                  {t.career.points.clarity}
                </p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow">
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 rounded-full bg-teal-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-teal-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-slate-700">
                  {t.career.points.image}
                </p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow">
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 rounded-full bg-amber-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-slate-700">
                  {t.career.points.leadership}
                </p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-shadow">
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 rounded-full bg-purple-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <p class="text-slate-700">
                  {t.career.points.embrace}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <p class="text-lg text-slate-700 leading-relaxed max-w-3xl font-medium">
        {t.career.footer}
      </p>
    </div>
  </div>
</section>